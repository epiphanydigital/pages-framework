{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": false,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-async-runtime",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "site",
    "components",
    "_layouts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
